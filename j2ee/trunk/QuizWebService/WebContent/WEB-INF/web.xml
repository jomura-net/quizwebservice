<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>QuizWebService</display-name>

  <servlet>
    <description>JSON REST Service</description>
    <servlet-name>restServlet</servlet-name>
    <servlet-class>net.arnx.jsonic.web.RESTServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>
          mappings: {
              '/{class}.{method}.json': {
                  'target': 'net.jomura.quiz.${class}ServiceImpl', 
                  'verb': 'GET'
              }
          }
      </param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>restServlet</servlet-name>
    <url-pattern>*.json</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>QuizClient.htm</welcome-file>
  </welcome-file-list>

  <context-param>
    <param-name>qmlDir</param-name>
    <param-value>D:/QuizWebService/j2ee/trunk/QuizWebService/data</param-value>
  </context-param>

  <context-param>
    <param-name>TempFilePath</param-name>
    <param-value>D:/QuizWebService/j2ee/trunk/QuizWebService/data/TempFile.obj</param-value>
  </context-param>

</web-app>
